<link rel="stylesheet" href="/css/home.css">

<div id="home-container">

    <section id="feed-posts">
        <h4>Posts</h4>

        <% if(locals.user){%>
        <form action="/posts/create" id="new-post-form" method="post">
            <textarea name="content" cols="30" rows="3" placeholder="Type Here" required>

            </textarea>
            <input type="submit" value="POST">

        </form>
        <%}%>

        <div id="posts-list-container">

            <ul>
                <% for(post of posts){%>
                    
                    <%- include('_post') -%>

                <% } %>
            </ul>

        </div>
    </section>

    <aside>

        <section id="user-friends">
            <h2>Our App Users</h2>
            <% for(u of all_users){ %>
                <p>
                    <a href="/users/profile/<%= u.id %>"> <%= u.name %> </a>
                </p>

            <% } %>
        </section>

        <section id="user-friendships-list-container">
            <h3>Friends List</h3>

            <% if(locals.user) { %>

                <% for(u of logged_user.friendships){ %>

                    <% if(u.from_user.id === locals.user.id) { %>
                        <p id="friend-<%= u.id %>">
                            <a href="/users/profile/<%= u.to_user._id %>"> <%= u.to_user.name %> </a>
                        </p>
                    <% }
                    else{%>
                        <p id="friend-<%= u.id %>">
                            <a href="/users/profile/<%= u.from_user.id %>"> <%= u.from_user.name %> </a>
                        </p>
                    <%}%>
    
                <% } %>

            <% } %>
           
    
        </section>
    
    </aside>

    
</div>
